<view wx:if="{{loading}}" class="weui-loadmore">
  <view class="weui-loading"></view>
  <view class="weui-loadmore__tips weui-loadmore__loading-tips">正在加载中...</view>
</view>
<view wx:else class="weui-loadmore">
    <view class="weui-loadmore__tips">亲，已经到底了哦...</view>
</view>
