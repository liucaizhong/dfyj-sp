/* pages/myactivity/myactivity.wxss */
/* pages/navbar/navbar.wxss */
page,
.page,
.page__bd{
  height: 100%;
}
.page__bd{
  padding-bottom: 0;
}
.weui-tab {
  position: relative;
  height: 100%;
  background: #F9F9F9; 
}
.weui-tab__content{
  /* padding-top: 60px;
  text-align: center; */
  display:flex;
  flex-direction:column;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y:auto;
}
.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  /* border-bottom: 1rpx solid #ccc; */
  background: #fff;
}
.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
}
.weui-navbar__item.weui-bar__item_on {
  color: #FF8264;
}
.weui-navbar__title {
  display: inline-block;
  font-size: 12px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 1px;
  background-color: #FF8264;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.activity-listitem {
  margin-bottom: 10px;
}

.no-activity {
  height:100%;
  box-sizing:border-box;
  display:flex;
  flex-direction:column;
  align-items:center;
  padding:30% 0;
}

.no-activity__img {
  width: 65px;
  height: 80px;
  margin-bottom: 12px;
}

.no-activity__text {
  font-size: 14px;
  margin-bottom: 5px;
}

.no-activity__subtext {
  font-size: 14px;
  color: #bfbfbf;
}