/* pages/search/search.wxss */
.search {
  width: 100%;
  height: 100%;
}

.search__header {
  box-sizing: border-box;
  width: 100%;
  height: 40px;
  background: #fff;
  padding: 0 8px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.search__input {
  box-sizing: border-box;
  flex: 1;
  margin-right: 8px;
  font-size: 13px;
  border-radius: 15px;
  padding-left: 15px;
  background: #ecf0f1;
  color: #000;
}

.search__cancel {
  color: #FF8264;
  font-size: 13px;
  font-weight: bold;
}

.search__history {
  width: 100%;
  height: auto;
}

.search__history-header {
  color: #8a8a8a;
  font-size: 14px;
  padding: 10px;
  width: 100%;
  height: 40px;
  box-sizing: border-box;
}

.search__history-body {
  width: 100%;
  height: auto;
  font-size: 13px;
  background: #fff;
}

.search__history-body-item {
  width: 100%;
  height: 35px;
  padding-left: 10px;
  line-height: 2.6;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
}

.search__history-footer {
  width: 100%;
  height: 35px;
  font-size: 13px;
  color: #8a8a8a;
  text-align: center;
  background: #fff;
  line-height: 2.7;
}

.search__result-body {
  width: 100%;
  height: auto;
  font-size: 13px;
  background: #fff;
}

.search__result-item {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 35px;
  padding: 0 10px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 2.6;
  border-bottom: 1px solid #e6e6e6;
}

.search__result-item:last-child {
  border-bottom: none;
}

.search__result-none {
  padding:10px 20px;
  font-size:13px;
}
