/**index.wxss**/
.index__scroll-view {
  position: relative;
  width: 100%;
  min-height: 100%;
  overflow-x: hidden;
}

.index__back {
  position: fixed;
  top: 0;
  left: -10%;
  width: 120%;
  height: 180px;
  background: #ef4d4a; 
  border-radius: 0 0 1000% 1000%;
  z-index: -1;  
}  

.index__header {
  /* position: absolute; 
  top: 0;
  left: -10%;
  width: 120%;
  height: 200px;
  background: #ef4d4a;
  border-radius: 0 0 1000% 1000%; */
  display: flex;
  justify-content: center;
}

.index__header-content {
  box-sizing: border-box;
  /* margin: 0 10%;  */
  padding: 5px 10px;
  width: 100%; 
  height: 40px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.index__input {
  position: relative;
  flex: 1;
  font-size: 15px;
  padding: 0 30px;
  background: #fff;
  text-align: center;
  border-radius: 5px;
  height: 27px;
}

.index__input:not(last-child) {
  margin-right: 10px;
}

.index__input-search-icon {
  position: absolute;
  left: 8px;
  top: 6px;
}

.index__camera {
  width: 26px;
  height: 26px;
  opacity: .3;
}

.index__add-btn {
  position: fixed;
  bottom: 10px;
  right: 10px;
  width: 40px;
  height: 40px;
  z-index: 999;
  background: #1357d1; 
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.index__add-icon {
  width: 60%;
  height: 60%;
}

.index__content {
  /* position: absolute;   */
  width: 100%;
  /* top: 60px; */
  margin-top: 10px;
  height: auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index__activitycard {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30px;
  margin-bottom: 25px;
}

.index__activitycard:nth-last-child(2) {
  margin-bottom: 0;
}

.index__loadmore {
  width: 100%;
}

.index__input-placeholder {
  font-size: 13px;
  text-align: center;
  color: #8b9093;
  line-height: 2.3;
}

